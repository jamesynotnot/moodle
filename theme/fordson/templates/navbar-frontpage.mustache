}}
<nav class="fixed-top navbar navbar-fhs navbar-expand moodle-has-zindex" style="max-height:325px;max-width:1024px;margin:auto">
        <a href="{{{ config.wwwroot }}}" class="navbar-brand {{# output.should_display_navbar_logo }}has-logo{{/ output.should_display_navbar_logo }}
            {{^ output.should_display_navbar_logo }}
                d-sm-inline
            {{/ output.should_display_navbar_logo }}
                ">
            <span class="logo d-sm-inline">
                <img src="{{output.get_logo_url}}" alt="{{sitename}}" style="max-height:135px;padding-left:20px">
            </span>
        </a>

        <!-- course_controls -->
        <div class="coursecontrols nav-item d-flex">
            {{{ output.teacherdashmenu }}}
            {{{ output.edit_button_fhs }}}
        </div>

        <ul class="nav navbar-nav ml-auto">
            <div class="d-none d-lg-block">
            {{{ output.search_box }}}
            </div>
            <!-- navbar_plugin_output -->
            <li class="nav-item">
            {{{ output.navbar_plugin_output }}}
            </li>
            <!-- user_menu -->
            <li class="nav-item d-flex align-items-center">
                {{{ output.user_menu }}}
            </li>
        </ul>

        <nav class="navbar menubar-fhs navbar-expand moodle-has-zindex" style="position:fixed;top:155px;left:0px;right:0px;max-height:225px;max-width:1023px;margin:auto;z-index:1040;width:-webkit-fill-available;">
            <ul class="nav navbar-nav ml-auto" style="width:-webkit-fill-available;">
                {{>theme_fordson/menubar-frontpage}}
            </ul>
        </nav>
</nav>
